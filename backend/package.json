{
  "name": "demo-project-backend",
  "private": true,
  "version": "0.0.1",
  "license": "UNLICENSED",
  "description": "Backend of demo-project",
  "author": {
    "name": "Raed Chammam",
    "email": "raed.chammam@gmail.com",
    "url": "https://raed.dev"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "lint": "eslint --ext .js,.ts ./src ",
    "lint:fix": "yarn lint --fix",
    "lint:ts": "tsc --noEmit",
    "test": "yarn lint && yarn lint:ts",
    "dev:source": "tsc-watch --noClear --onSuccess \"node --require dotenv/config ./dist/start.js\"",
    "dev:routes": "nodemon --watch ./src/controller -e ts -x \"yarn build:routes\"",
    "dev": "yarn clean && concurrently \"yarn dev:source\" \"yarn dev:routes\"",
    "build:routes": "tsoa spec-and-routes",
    "build:source": "tsc",
    "build": "yarn clean && yarn build:routes && yarn build:source",
    "start": "node --require dotenv/config ./dist/start.js",
    "docker:build": "docker build --tag raedchammam/demo-project-backend .",
    "docker:run": "docker run -d -p 3000:3000 --name backend raedchammam/demo-project-backend",
    "docker:stop-container": "docker stop backend",
    "docker:remove-container": "docker rm backend",
    "docker:remove-image": "docker rmi raedchammam/demo-project-backend"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/command-line-args": "^5.0.0",
    "@types/eslint": "^7.2.5",
    "@types/express": "^4.17.9",
    "@types/ioredis": "^4.17.8",
    "@types/method-override": "^0.0.31",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.10",
    "@types/stoppable": "^1.1.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.2.9",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "command-line-args": "^5.1.1",
    "dotenv": "^8.2.0",
