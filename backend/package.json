    "express-async-errors": "^3.1.1",
    "http-status-codes": "^2.1.4",
    "ioredis": "^4.19.2",
    "kafkajs": "^1.15.0",
    "method-override": "^3.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.5.1",
    "prom-client": "^12.0.0",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.0.0",
    "stoppable": "^1.1.0",
    "swagger-ui-express": "^4.1.5",
    "tsoa": "^3.4.0",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.1",
    "winston": "^3.3.3"
  }
}
